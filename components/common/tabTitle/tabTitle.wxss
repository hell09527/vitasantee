/* components/common/tabTitle/tabTitle.wxss */
.nav{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    box-sizing: border-box;
    padding: 0 20rpx;
    color: #fff;
    font-size: 36rpx;
    font-weight: 500;
    background-color: #e40046;
    z-index: 999;
}
.nav.ios{
    text-align: center;
}
.nav .nav-right,
.nav .nav-left{
    min-width: 46rpx;
}
.nav .nav-title{
    width: calc(100vw - 160rpx);
    color: inherit;
    font-size: inherit;
    font-weight: inherit;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.nav .nav-icon{
    width: 36rpx;
    height: 36rpx;
}
.flex{
    display: flex;
    justify-content: space-between;
    align-items: center;
}