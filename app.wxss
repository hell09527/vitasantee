/*客服  */
.yuan{
  position: fixed;
  bottom:30px;
  right:30rpx;
     width: 38px;   
    height: 38px;  
   border:0;  
  font-size: 12px;
  color: #000;
  border-radius: 50%;
   padding:0;
   margin:0;
   background-color: #fff; 
   transition:right 0.5s;
   outline:none;
  box-shadow: 0px 0px 20px #cbcbcb;
  z-index: 1000;
} 

.hide-kf{
  position: fixed;
  bottom:30px;
  right:-40rpx;
     width: 38px;   
    height: 38px;  
  font-size: 12px;
  color: #000;
   padding:0;
   margin:0;
  border-radius: 50%;
   background-color: #fff; 
   transition:right 0.5s;
   outline:none;
  box-shadow: 0px 0px 20px #cbcbcb; 
}
.hide-kf::after{
   border:0; 
}
.yuan::after{
   border:0; 
}
.yuan image,.hide-kf image{
   width: 22px;
   display: block;
   border-radius: 50%;
  border:0;
  margin:8px;
}
.yuan .ke_fu{
  font-size:12px
}


