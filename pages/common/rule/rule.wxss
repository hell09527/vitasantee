/* pages/common/rule/rule.wxss */
/* @import "../kol/kol.wxss"; */
.template{
    padding: 10px 30rpx;
    font-size: 14px;
}
.explains{
    text-align:left;
}
.tables {
    border: 1px solid #f1f1f1;
    margin-top:40rpx;
    margin-bottom:40rpx;
}
.trs {
    display: flex;
    width: 100%;
    align-items: center;
    border-bottom: 1px solid #f1f1f1;
}
.trs:last-child{
    border-bottom: none;
}
.tds {
    width:40%;
    padding-left:30rpx; 
    text-align: left;
    height: 100%;
}
.bg-w{
    background: #f1f1f1;
}
.bg-g{
    background: #fff;
}
.bg-f{
    background: #ccc;
    padding:10rpx 0;
}
.th {
    width: 40%;
    justify-content: center;
    color: #000;
    display: flex;
    height: 80rpx;
    align-items: center;
    font-weight:700;
}
.th_pop{
    width: 60%;
    justify-content: center;
    color: #000;
    display: flex;
    height: 80rpx;
    align-items: center;
    font-weight:700;
    border-left: 1px solid #fff;
}
.be_come{
    width:60%;
   padding:10rpx 30rpx;
  text-align:left;
    border-left: 1px solid #f1f1f1;
}
.headline{
   font-size:16px;
  color:#000;
  text-align:left;
  font-weight:700;
}
.head_text{
    text-align:left;
    margin:15rpx 0px;
}
.tb{
    border-bottom: 1px solid #f1f1f1;
    display: flex;
    width: 100%;
    height: 80rpx;
    align-items: center;
}
.tb:last-child{
    border-bottom: none;
}
.Star_table{
    border: 1px solid #f1f1f1;
}
.Star_table .td{
    border-right: 1px solid #f1f1f1;
    display: flex;
    width: 100%;
    height: 80rpx;
    align-items: center;
} 
.Star_table .td:last-child{
    border-right: none;
}
.Star_table .th{
    width: 33.33%;
    border-right: 1px solid #fff;
    padding-left:30rpx;
    background:#f1f1f1;
    color: #000;
    display: flex;
    height: 80rpx;
    align-items: center;
    font-weight:700;
}
.Star_table .th:last-child{
    border-right: none;
}
.rotate{
    transform-origin:center;
    transform:rotate(90deg);
    margin-bottom: 10rpx;
}
.deposit{
    width:280px;
    height:40px;
    line-height: 40px;
    color: #fff;
    margin: 0 auto;
    background:#80a9c0;
    margin-top:40rpx;
    margin-bottom:40rpx;
}
.fill-run{
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.use-heading{
    width: 40px;
    height: 40px;
    border-radius: 50px;
}
.use-info{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    /* width: 60px; */
    height: 60px;
}
.close{
    height:2900rpx;
    overflow:hidden;
}