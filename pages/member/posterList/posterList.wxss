}

.add{
 text-align: center;
 color:#fff;
line-height:120rpx;
font-size:15px;
font-weight:500;

}
.posterlis{
  width:98%;
	column-count:2;
	column-gap: 10rpx;
	margin: 0 auto;
}
.goods_all{
  /* display: inline-block; */
	width:98%;
	height: 100%;
	overflow: auto;
	padding-top:20rpx;
}
.goods_all:nth-child(2n)>.all-box{
  margin:0 20rpx 20rpx 10rpx;
}
.all-box{
  margin:0 10rpx 20rpx 20rpx;
 
  background: #fff;
  box-sizing: border-box;
}
.all-box>image{
  width:100%;
  display: block;
}
.shop-detail{
  padding:10rpx;
}
.title{
  font-size: 12px;
  line-height: 18px;
  height:36rpx;
  display: -webkit-box; 
-webkit-line-clamp: 2; 
-webkit-box-orient: vertical; 
overflow: hidden;
}

.shop-detail-price{
  display: flex;
  justify-content: flex-start;
  padding:10rpx 0 0;
  align-items: center;
}
.shop-detail-price>text{
  color:#000;
  margin-right: 10px;
  font-weight:700;
}
.i.goods_tab {
