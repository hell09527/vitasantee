page{
  background: #fff;
}
.form-info{
  margin: 2px 0px 15px;
  padding:40rpx;
}

.div-item{
  padding:0 40rpx;
  background: #fff;
  border: 1px solid #e4e4e6;
  border-radius: 40rpx;
  height: 80rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.address-info{
  display: flex;
  justify-content: flex-start;
  border-radius: 5px;
  border:1px solid #e4e4e6;
  padding:40rpx;
}
.address-info .span{
  width:180rpx;
  padding-top: 8px;
}
.address-info textarea{
  padding:4rpx;
  height: 200rpx;
  margin:0;
}

.div-item-active{
  border:1px solid #e40046;
}
.div-item .span{
  text-align: left;
  margin-right: 20rpx;
  color:#333;
  font-size: 14px;
}

.div-item input{
  flex: 1;
  color:#333;
}

.picker{
  height: 30px;
  line-height: 30px;
  padding-left: 5px;
}

.btn-save{
  width:330rpx;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 42rpx;
  color:#fff;
  background: #e40046;
  font-size: 16px;
  margin:0 auto 40rpx;
}
