.brand_goods{
  padding:20rpx;
  width:100%;
  /* margin:0 auto; */
}
.brand_goods .left{
  display: inline-block;
  margin-right:20rpx;
  width:344rpx;
  vertical-align: top;
}
.brand_goods .right{
  display: inline-block;
  width:344rpx;
  vertical-align: top;
}
.brand_goods_detail{
  /* float: left; */
  display: inline-block;
  margin-bottom:20rpx;
  width:100%;
  box-shadow: 0px 0px 20px rgba(0,0,0,0.1);
  /* height: 400rpx; */
  background: #fff;
  border-radius: 5px;
}
.brand_goods_detail>image{
  width:100%;
  border-radius: 5px;
}
.brand_goods_price{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:10rpx 10rpx 10rpx 0;
}
.brand_goods_price>text{
  font-size:12px;
  color:#005882;
  margin-right: 10rpx;
}
.brand_goods_price>image{
  width:34rpx;
}
.activity_text{
  /* height:34px; */
  margin:10rpx 0;
  font-size: 12px;
  color:#333;
  display: -webkit-box; 
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical; 
  overflow: hidden;
  white-space:pre-line;
}
.activity_info{
  font-size: 12px;
  color:#999;
  display: -webkit-box; 
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical; 
  overflow: hidden;
  white-space:pre-line;
}

.i.goods_tab {
  font-style: normal;
  font-size: 10px !important;
  background: #e40046;
  color: #fff !important;
  padding: 1px 5px;
  margin-right: 2px;
  border-radius: 8px;
  font-weight: normal !important;
}