.body{
  padding:10rpx 0;
  box-sizing: border-box;
  display: table;
  width:100%;
  margin-bottom: 45px;
}
.price{
  display: flex;
  justify-content: flex-start;
  padding:10rpx 0 0;
  align-items: center;
}
.price>text{
  color:#f20;
  margin-right: 10px;
}
.package{
  border:1px solid #000;
  color:#000;
  padding:0 10rpx;
  border-radius: 4px;
  font-size: 12px;
}
.hint>image{
  width:100%;
  display: block;
}
.hint>text{
  font-size: 14px;
  color:#333;
}
.all{
  width:50%;
  float: left;
  box-sizing: border-box;
}
.all:nth-child(2n)>.all-box{
  margin:0 10rpx 10rpx 5rpx;
}
.all-box{
  margin:0 5rpx 10rpx 10rpx;
  background: #fff;
  box-sizing: border-box;
}
.all-box>image{
  width:100%;
  height:360rpx;
  display: block;
}
.shop-detail{
  padding:10px;
}
.title{
  font-size: 12px;
  line-height: 18px;
  height:36px;
  display: -webkit-box; 
-webkit-line-clamp: 2; 
-webkit-box-orient: vertical; 
overflow: hidden;
}
.btn{
  display: flex;
  position: fixed;
  bottom: 0;
  justify-content: space-around;
  align-items: center;
  width:100%;
}
.btn>button{
  background: #000;
  color:#fff;
  line-height: 40px;
  border-radius: 0;
  font-size: 12px;
  width:50%;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top:30%;
  left: 0;
  right: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: auto;
  border-radius: 20rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-title-desc{
  font-size:24rpx;
  color:gray;
}

.modal-content {
  padding: 50rpx 32rpx;
  border-top:1rpx solid #DDDDDD;
  border-bottom:1rpx solid #DDDDDD;
}

.modal-content .flex-wrp .flex-item{
  margin-bottom:10rpx;
}
.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #878787;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #000;
  font-weight:900;
  text-align: center;
}

.goods-type-icon{
  background:#000;
  color:#fff;
  font-size:12px;
  padding:1px 4px;
  margin-right:3px;
}
.gift_title{
  width: 80%;
  text-align: center;
  margin:15px  auto;
}

.goods_tab{
  font-style: normal;
  font-size: 12px!important;
  background: #333;
  color: #fff;
  padding: 1px 3px;
  margin-right: 2px;
  border-radius: 2px;
  font-weight: normal!important;
}
.modal-image{
  width: 80%;
  position: fixed;
  top:17%;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: auto;
}
.close{
  position: absolute;
  top:-50rpx;
  width:50rpx;
  right:-25rpx;
}