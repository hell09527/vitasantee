        </view>
    </block> -->
        <!-- 视频 -->
        <!-- <view wx:if='{{unregistered==1}}' >
     <button class="Login" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" >
      <view class="wz">购买商品请先登录！点击登录 >>></view>
     <!-- <view class='d_l'>登陆</view> -->
