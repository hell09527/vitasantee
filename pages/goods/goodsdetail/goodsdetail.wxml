</view> -->
        <block wx:if='{{selectType == "video"}}'>
            <video src='{{goods_info.goods_video_address}}' autoplay='false' style='height:{{swiperHeight}}px'></video>
        </block>
        <!-- 图片 -->
        <block wx:if='{{selectType == "img"}}'>
            <swiper indicator-dots="{{indicatorDots}}" indicator-color='{{indicatorColor}}' indicator-active-color='{{indicatorActiveColor}}' autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular='{{circular}}' style='height:{{swiperHeight}}px'>
                <block wx:for="{{imgUrls}}" wx:key="" wx:for-index='index'>
                    <swiper-item>
                        <image src="{{item.pic_cover_big}}" catchtap='preivewImg' data-index='{{index}}' binderror='errorImg' class="slide-image" mode='widthFix' />
                    </swiper-item>
                </block>
            </swiper>
        </block>
        <!-- promotion_type 0正常 2限时 3秒杀 -->
        <!-- 商品图，价格 -->
        <block wx:if="{{goods_info.promotion_type == 2 && goods_info.promotion_detail != ''}}">
            <view class="goods-header js-goods-header goods-activity clearfix">
                <view class="goods-price {{timer_array.end==1?'gray':''}}">
                    <view class="current-price activity-price">
                        <!-- <view class='span'>￥</view> -->
                        <view class="i js-goods-price price">￥{{goods_info.promotion_price}}</view>
                        <view class="span price-title js-price-title {{timer_array.end==1?'gray':''}}">
                            限时体验
                        </view>
                    </view>
                    <!-- <view class='em' class="original-price">{{goods_info.price}}</view> -->
                    <view class="font-size-12 overview-countdown js-activity-tips started">
                        <block wx:if='{{timer_array.end == 0}}'>
                            <view class="countdown-title">距结束仅剩</view>
                            <view class="js-discount-time countdown">
                                <view class="span js-day">{{timer_array.day}}</view>
                                天
                                <view class="span js-hour">{{timer_array.hour}}</view>
                                时
                                <view class="span js-min">{{timer_array.minute}}</view>
                                分
                                <view class="span js-sec">{{timer_array.second}}</view>
                                秒
                            </view>
                        </block>
                        <block wx:else>
                            <view class="countdown-title">活动已结束</view>
                        </block>
                    </view>
                </view>
            </view>
        </block>
        <!-- 商品图，价格 -->
        <block wx:if="{{saleState}}">
            <view class="goods-header js-goods-header goods-activity clearfix">
                <view class="goods-price {{timer_array.end==1?'gray':''}}">
                    <view class="current-price activity-price">
                        <!-- <view class='span'>￥</view> -->
                        <view class="i js-goods-price price">￥{{(goods_info.promotion_price<goods_info.price)?goods_info.promotion_price:goods_info.price}}</view>
                        <view class="span price-title js-price-title {{timer_array.end==1?'gray':''}}">
                            每日秒杀
                        </view>
                    </view>
                    <!-- <view class='em' class="original-price">{{goods_info.price}}</view> -->
                    <view class="font-size-12 overview-countdown js-activity-tips started">
                        <block wx:if='{{timer_array.end == 0}}'>
                            <view class="countdown-title">距结束仅剩</view>
                            <view class="js-discount-time countdown">
                                <view class="span js-day">{{timer_array.day}}</view>
                                天
                                <view class="span js-hour">{{timer_array.hour}}</view>
                                时
                                <view class="span js-min">{{timer_array.minute}}</view>
                                分
                                <view class="span js-sec">{{timer_array.second}}</view>
                                秒
                            </view>
                        </block>
                        <block wx:else>
                            <view class="countdown-title">{{timer_array.msg || '活动已结束'}}</view>
                        </block>
                    </view>
                </view>
            </view>
        </block>
        <view class="buy_area">
            <view class="fn_wrap" style="position: relative;">
                <view decode="{{true}}" class="h1 title" id="itemName">
                    <text decode="true">{{goods_info.goods_name}}</text>
                </view>
                <text decode="true" class="p goods-introduction">{{goods_info.introduction}}</text>
                <button class="span give-the-thumbs-up" catchtap="proChoose">
                    <image src='/images/goods/icon_share.png' class="i fa fa-thumbs-up" mode='scaleToFill'></image>
                    分享
                </button>
            </view>
            <view class="price_wrap">
                <view class='flex' wx:if="{{scale==1}}" data-scale="1">
                    <view class="price" wx:if="{{!saleState}}">
                        ￥{{(goods_info.promotion_price<goods_info.price)?goods_info.promotion_price:goods_info.price}}
                    </view>
                    <block wx:if='{{sum==1}}'>
                        <!-- <view wx:if="{{(goods_info.promotion_type == 3 && goods_info.promotion_detail != '')}}">原价：</view> -->
                        <view class="sos" id="priceTitle" wx:if="{{goods_info.market_price > goods_info.promotion_price}}">
                            ￥{{goods_info.market_price}}
                        </view>
                    </block>
                </view>
                <view class='flex' wx:else>
                    <view class="price" wx:if='{{Min_ori}}'>￥{{Min_ori}}-{{Max_ori}}</view>
                    <block wx:if='{{sum==1}}'>
                        <view class="sos" id="priceTitle" wx:if="{{goods_info.market_price - goods_info.price > 0}}">
                            ￥{{ Min_bazaar}}-{{ Max_bazaar}}
                        </view>
                    </block>
                </view>
                <!-- <block wx:if='{{goods_info.point_exchange_type == 1}}'>
                    <view class='span point'>+{{goods_info.point_exchange}}积分</view>
                </block> -->
                <!-- <block wx:if='{{goods_info.point_exchange_type == 1}}'>
                <view class='span point'>+{{goods_info.point_exchange}}积分</view>
              </block> -->
                <view class="span flag" style='color:#CC9933' id="priceDis" wx:if="{{goods_info.vip_price>0}}">
                    会员价:
                    <text>￥{{goods_info.vip_price}}</text>
                </view>
                <view class="span flag" wx:if='{{is_employee==1&&is_inside_sell==1}}'>
                    内购价:
                    <text>
                        ￥{{parseInt(goods_info.promotion_price)< parseInt(goods_info.inside_price)?goods_info.promotion_price:goods_info.inside_price}}
                    </text>
                </view>
                <view wx:if="{{activeSecKillShow&&!saleState}}" class="seckill-preview">
                    <text class="tip">秒杀</text>
                    <text>{{activeSecKillShow}}</text>
                </view>
            </view>
            
            <!-- 限购 -->
            <block wx:if='{{goods_info.max_buy!=0}}'>
                <view class="hr divider-line"></view>
                <view class="price_postage">
                    <view class="span price_postage_tit">
                        <i class='max-buy'>限购数量</i>
                        {{goods_info.max_buy}}个
                    </view>
                </view>
            </block>
            <!-- <view class="hr with-margin-l"></view> -->
            <!-- <view class="stock-detail">
            <view class='span first'>销量：{{goods_info.sales}}笔</view>
            <view class='span'>运费：{{goods_info.shipping_fee_id==0?'免邮':goods_info.shipping_fee_name}}</view>
            点击：{{goods_info.clicks}}
            <view class='span last'></view>
        </view> -->
        </view>
        <!-- <view class="hr with-margin-l"></view> -->
        <view class="hr divider-line"></view>
        <!-- 开通会员 -->
        <!-- <view class="openMember" catchtap='toOpenMember' wx:if="{{is_vip==0}}">
      <text style='font-size:12px;'>会员享受更多优惠</text>
      <view>
        <text style='font-size:14px;color:#fff;margin-right:10rpx;'>加入会员</text>  
        <image class="i jiantou" src='/images/goods/assistant_right.png'></image>
      </view>
    </view> -->
        <!-- 满减送 -->
        <block wx:if='{{goods_info.mansong_name != "" && goods_info.mansong_name != undefined && goods_info.mansong_name != null}}'>
            <view class="price_postage" catchtap='toShowMore'>
                <view class="span price_postage_tit js-reduced-send {{mansongNameMore?'':'single'}}">
                    <view class='i goods_tab'>促销</view>
                    {{goods_info.mansong_name}}
                </view>
            </view>
            <hr class="hr with-margin-l" />
        </block>
        <!-- 阶梯优惠 -->
        <block wx:if='{{goods_info.goodsLadderPreferentialList[0] != indefined}}'>
            <view class="price_postage" id="ladder_preferential">
                <view class="span price_postage_tit js-reduced-send single" catchtap='ladderPreferentialShow'>
                    <view class='i goods_tab'>阶梯优惠</view>
                    满
                    <view class='b'>{{goods_info.goodsLadderPreferentialList[0].quantity}}</view>
                    件,每件降
                    <view class='b'>{{goods_info.goodsLadderPreferentialList[0].price}}</view>
                    元
                    <image class="jiantou" src='/images/goods/assistant_right.png'></image>
                </view>
            </view>
        </block>
        <!-- 阶梯优惠弹框 -->
        <view class="bottom_popup {{ladderPreferentialShow==1?'show':''}}" data-popup-type="store_service">
            <view class="bottom_popup_title">阶梯优惠</view>
            <view class="ul coupon_list">
                <view class="mark mark_title">阶梯优惠</view>
                <block wx:for='{{goods_info.goodsLadderPreferentialList}}' wx:key='' wx:for-item='vo'>
                    满
                    <view class='b'>{{vo.quantity}}</view>
                    件,每件降
                    <view class='b'>{{vo.price}}</view>
                    元
                </block>
            </view>
            <view class="bottom_popup_button" id="complete" catchtap='popupClose'>
                <view class='span'>完成</view>
            </view>
        </view>
        <!-- 领取优惠劵 -->
        <block wx:if='goods_info.goods_pintuan == undefined'>
            <block wx:if='{{goods_info.goods_pintuan.is_open != 1}}'>
                <block wx:if='{{goods_info.goods_coupon_list[0]!=undefined}}'>
                    <view class="price_postage" id="receive_coupons">
                        <view class="span price_postage_tit single" catchtap='popupShow'>
                            <image src="/images/goods/receive-coupon.png" mode='widthFix'></image>
                            领取优惠劵
                            <image class="i jiantou" src='/images/goods/assistant_right.png'></image>
                        </view>
                    </view>
                    <view class="hr with-margin-l"></view>
                </block>
            </block>
        </block>
        <!-- 领取优惠券弹框 -->
        <view class="bottom_popup {{popupShow==1?'show':''}}" animation='{{animation}}'>
            <view class="bottom_popup_title">领取优惠劵</view>
            <view class="ul coupon_list">
                <block wx:for='{{goods_info.goods_coupon_list}}' wx:key='' wx:for-item='coupon' wx:for-index='coupon_index'>
                    <view class='li'>
                        <view class="js-coupon {{coupon.status==0?'gray-border':''}}">
                            <view class="coupon-price" catchtap='toReceivePopup' data-fetch='{{coupon.max_fetch}}' data-received='{{coupon.receive_quantity}}' data-id='{{coupon.coupon_type_id}}' data-index='{{coupon_index}}'>
                                <image src="/images/goods/goods_coupon_recive{{coupon.status==0?'d':''}}.png" />
                                <view class="p price">￥{{coupon.money}}</view>
                                <view class="p desc">{{coupon.status==1?'立即领取':'已领取'}}</view>
                            </view>
                            <view class="coupon-lose">
                                <view class="p condition">
                                    {{coupon.money}}元优惠券，满{{coupon.at_least}}可用
                                </view>
                                <view class="p time">
                                    <view class='span'>{{coupon.start_time}}</view>
                                    至
                                    <view class='span'>{{coupon.end_time}}</view>
                                </view>
                            </view>
                        </view>
                    </view>
                </block>
            </view>
            <view class="bottom_popup_button" id="complete" catchtap='popupClose'>
                <view class='span'>完成</view>
            </view>
        </view>
        <image class="expressage" style='width:100%;' wx:if="{{ goodsDetailImg!=0}}" src='{{goodsDetailImg}}' mode='widthFix'></image>
        <!-- <view class="hr divider-line"></view> -->
        <!-- 已选择 -->
        <block wx:if='goods_info.goods_pintuan == undefined'>
            <block wx:if='{{goods_info.goods_pintuan.is_open != 1}}'>
                <!-- catchtap='Examine' -->
                <view class="price_postage" id="theSelected" catchtap="{{tel!=''?'Examine':''}}" data-type='buy'>
                    <view class='span left'>已选择</view>
                    <view class="span selected">{{sku_info.sku_name}} 　{{goodsNum}}件</view>
                    <image class="i jiantou" src='/images/goods/assistant_right.png'></image>
                </view>
            </block>
        </block>
        <view class="DMSbuy" wx:if='{{goods_info.goods_group_list.length>0}}'>
            <block wx:for='{{goods_info.goods_group_list}}' wx:key='' wx:for-item='vo'>
                <view class="bao">
                    <view class="circle">
                        <image src='/images/goods/cartp2.png'></image>
                    </view>
                    <view class="titles">{{vo.group_name}}</view>
                </view>
            </block>
        </view>
        <!-- 春节物流通告 -->
        <!-- <image class="expressage" style='height:260rpx;' src='https://static.bonnieclyde.cn/20190129-%E5%8F%91%E8%B4%A7%E9%80%9A%E7%9F%A5.jpg' mode='widthFix' ></image> -->
        <!-- 商家服务 -->
        <block wx:if='{{goods_info.existingMerchant[0]!=undefined}}'>
            <view class="price_postage">
                <view class='span'>服务</view>
                <view class='span left'>
                    由
                    <view class='a'>Niushop</view>
                    发货并提供售后服务
                </view>
            </view>
            <view class="hr with-margin-l"></view>
            <view class="price_postage" id="store_service" catchtap='serviceShow'>
                <block wx:for='{{goods_info.existingMerchant}}' wx:key='' wx:for-item='vo'>
                    <view class='span'>
                        <icon type='success_no_circle' size='10' color='#FF4C4C'></icon>
                        {{vo.title}}
                    </view>
                </block>
                <image class="i jiantou" src='/images/goods/assistant_right.png'></image>
            </view>
        </block>
        <!-- 商家服务弹框 -->
        <view class="bottom_popup {{serviceShow==1?'show':''}}" data-popup-type="store_service">
            <view class="bottom_popup_title">商家服务</view>
            <view class="ul coupon_list">
                <block wx:for='{{goods_info.existingMerchant}}' wx:key='' wx:for-item='vo'>
                    <view class='li'>
                        <view class="p service_title">
                            <icon type='success_no_circle' size='14' color='#FF4C4C'></icon>
                            {{vo.title}}
                        </view>
                        <view class="p service_desc">{{vo.describe}}</view>
                    </view>
                </block>
            </view>
            <view class="bottom_popup_button" id="complete" catchtap='popupClose'>
                <view class='span'>完成</view>
            </view>
        </view>
        <!-- 拼团 -->
        <block wx:if='goods_info.goods_pintuan != undefined'>
            <block wx:if='{{goods_info.goods_pintuan.is_open == 1 && goods_info.goods_pintuan.pintuan_list.data[0] != undefined}}'>
                <view class="hr with-margin-l"></view>
                <view class='spelling-block'>
                    <swiper class='ul' autoplay='true' interval='3500' duration='1000' circular='true' vertical='true'>
                        <block wx:for='{{goods_info.goods_pintuan.pintuan_list.data}}' wx:key='' wx:for-item='pintuan' wx:for-index='index'>
                            <swiper-item>
                                <view class='li'>
                                    <view class="user-logo">
                                        <image src="{{pintuan.group_user_head_img}}" mode='widthFix' binderror='errorPintuanUserImg' data-index='{{index}}' />
                                    </view>
                                    <view class="span user-name">{{pintuan.group_name}}</view>
                                    <button catchtap='spellList' data-index='{{index}}'>去拼单</button>
                                    <view class="info">
                                        <view class='span'>
                                            还差
                                            <view class='strong'>{{pintuan.poor_num}}人</view>
                                            拼成
                                        </view>
                                        <br />
                                        <view class='time'>
                                            剩余：{{timers_array[index].hour+':'+timers_array[index].minute+':'+timers_array[index].second}}
                                        </view>
                                    </view>
                                </view>
                            </swiper-item>
                        </block>
                    </swiper>
                </view>
            </block>
        </block>
        <!-- 拼团弹框 -->
        <block wx:if='{{spellingShow == 1}}'>
            <view class="mask-layer-spelling">
                <view class='h3'>
                    参与
                    <strong>{{spelling.group_name}}</strong>
                    的拼单
                </view>
                <view class='p'>
                    仅剩
                    <strong>{{spelling.poor_num}}</strong>
                    个名额，
                    <view class='time'>
                        {{timers_array[spelling.index].hour+':'+timers_array[spelling.index].minute+':'+timers_array[spelling.index].second}}后结束
                    </view>
                </view>
                <image class="mask-layer-spelling-close" src="/images/pintuan/mask_layer_spelling_close.png" mode='widthFix' catchtap='popupClose' />
                <view class="user-list">
                    <view class='ul'>
                        <view class='li'>
                            <view class="span boss">拼主</view>
                            <image src="{{spelling.group_user_head_img}}" mode='widthFix' />
                        </view>
                        <view class='li'>
                            <image src="/images/pintuan/spelling_who.png" mode='widthFix' />
                        </view>
                    </view>
                </view>
                <button catchtap='participateSpellList' data-id='{{spelling.group_id}}'>
                    参与拼单
                </button>
            </view>
        </block>
        <!-- 赠送积分 -->
        <block wx:if='{{goods_info.give_point != 0 && goods_info.give_point != undefined}}'>
            <view class="hr with-margin-l"></view>
            <view class="price_postage">
                <view class="span price_postage_tit">
                    <image class="i fa fa-database red" src='/images/goods/send_point.png' />
                    赠送积分
                    <view class='span red'>{{goods_info.give_point}}</view>
                    分
                </view>
            </view>
        </block>
        <view class="hr divider-line"></view>
        <!-- 商品组合套餐 -->
        <block wx:if='{{goods_info.comboPackageGoodsArray.goods_array[0] != undefined}}'>
            <view class='a combo-package' catchtap='comboPackages' data-id='{{goods_info.goods_id}}'>
                <view class="price_postage">
                    <view class="span price_postage_tit single">
                        组合套餐
                        <image class="i jiantou" src='/images/goods/assistant_right.png'></image>
                    </view>
                </view>
                <view class="hr with-margin-l"></view>
            </view>
            <view class="combo_package">
                <view class="combo_package_goods">
                    <view class="goods">
                        <view class='a' catchtap='comboGoodsDetail' data-id='{{goods_info.goods_id}}' data-name='{{goods_info.goods_name}}'>
                            <image src="{{goods_info.picture_detail.pic_cover_micro}}" class="g-img" mode='widthFix'></image>
                            <view class="p g-price">￥{{goods_info.promotion_price}}</view>
                        </view>
                    </view>
                    <view class="i fa fa-plus" aria-hidden="true"></view>
                    <block wx:for='{{goods_info.comboPackageGoodsArray.goods_array}}' wx:key='' wx:for-item='goods' wx:for-index='index'>
                        <view class="goods">
                            <view class='a' catchtap='comboGoodsDetail' data-id='{{goods.goods_id}}' data-name='{{goods.goods_name}}'>
                                <image src="{{goods.pic_cover_micro}}" class="g-img" mode='widthFix' data-index='{{index}}' binderror='errorComboImg'></image>
                                <view class="p g-price">￥{{goods.promotion_price}}</view>
                            </view>
                        </view>
                        <block wx:if='{{index < goods_info.comboPackageGoodsArray.goods_array.length-1}}'>
                            <view class="i fa fa-plus" aria-hidden="true"></view>
                        </block>
                    </block>
                </view>
            </view>
            <!-- <view class="hr divider-line"></view> -->
        </block>
        <!-- 商品评价 -->
        <block wx:if="{{comments_list[0]!=undefined}}">
            <view class="evaluation-container">
                <view class="tab-module-title flex" style='justify-content: space-between;'>
                    <view style='font-size:14px;'>评价</view>
                    <view></view>
                    <!-- <view style='font-size:14px;'>52 <text style="color:#96989e">位会员好评推荐</text></view> -->
                </view>
                <view class="hr with-margin-l"></view>
                <view class='evaluation-detail'>
                    <view class='evaluation-title'>
                        <view catchtap='moreEvaluation' data-type='0' class='{{comments_type==0?"current":""}}'>
                            全部({{evaluates_count.evaluate_count}})
                        </view>
                        <view catchtap='moreEvaluation' data-type='4' class='{{comments_type==4?"current":""}}'>
                            图片({{evaluates_count.imgs_count}})
                        </view>
                        <view catchtap='moreEvaluation' data-type='1' class='{{comments_type==1?"current":""}}'>
                            好评({{evaluates_count.praise_count}})
                        </view>
                        <view catchtap='moreEvaluation' data-type='2' class='{{comments_type==2?"current":""}}'>
