/* pages/payMembers/perfectInfo/perfectInfo.wxss */
page{
  /* background: #f1f1f1; */
  height:100%;
}
.member-privilege{
  padding:30rpx;
  display: flex;
  align-items: center;
  justify-content:flex-start;
}
.member-privilege>text{
  font-size: 14px;
  line-height: 40rpx;
  margin-right: 10rpx;
}
.member-privilege>.hr{
  height:1px;
  background: #999;
  flex: 1;
}

.privilege-detail{
  width:690rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding:0 30rpx;
  margin-bottom: 30rpx;
}
.detail-item{
  width:25%;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  padding:20rpx 0;
  align-items: center;
}
.detail-item>image{
  width:40rpx;
  height:40rpx;
}
.selected{
  position: absolute;
  right:0;
  width:40rpx;
  height:40rpx;
  top:120rpx;
}
.info-form{
  background: #fff;
  padding:10rpx 30rpx;
}
.form-line{
  display: flex;
  justify-content: flex-start;
  font-size: 14px;
  line-height: 60rpx;
  padding:15rpx;
}
.form-line>text{
  width:20%;
}
.form-line input{
  flex: 1;
  background: #f1f1f1;
  height:60rpx;
  line-height: 60rpx;
 padding-left:15rpx;
 width: 100%;
}

/*性别单选按钮  */

.radioGroup{
  margin-right: 5rpx;
}
.radioGroup>image{
  width:44rpx;
  height:44rpx;
  margin:0 5px;
}
.radioGroup>text{
  font-size: 14px;
  line-height: 40rpx;
}

/*验证码  */
.yzm>button{
  background: black;
  color:#fff;
  padding:0 25rpx;
  font-size: 14px;
  line-height: 60rpx;
  border-radius: 0;
  box-sizing: border-box;
}

/*生日日期  */
.birth{
  display: flex;
  justify-content: space-between;
  flex: 1;
  background: #f1f1f1;
  height:60rpx;
  line-height: 60rpx;
  padding: 0 15rpx;
}
.birth-text{
  /* padding-left: 20%; */
  margin-left: 15rpx;
  color:#8F8E94;
  line-height: 15px;
  font-size: 12px;
}



/*协议  */
.agreement{
  display: flex;
  justify-content: center;
  align-items: center;
  padding:20px 0;
}
.agreement>image{
  width:40rpx;
  height:40rpx;
  margin-right: 15rpx;
}
.agreement>text{
  font-size: 14px;
}
.toPayBtn{
  background: #000;
  color:#fff;
  border-radius: 0;
  line-height: 50px;
  text-align: center;
  width:80%;
  margin:10rpx auto 30rpx;
}
.yzm{
flex:1;
}