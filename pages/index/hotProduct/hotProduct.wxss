/* pages/index/hotProduct/hotProduct.wxss */
@import "/templates/new-product-template/new-product-template.wxss";
@import "/templates/HomeOrShare-icon-template/HomeOrShare-icon-template.wxss";
.hot_goods_list{
  padding:20rpx;
}
.index_slide{
  position: relative;
}

.index_slide .slick{
  margin-top: 0;
  width: 100%;
  max-height: 153px;
  overflow: hidden;
}

.index_slide .slick image{
  width: 100%;
  height: 100%;
  max-width: 100%;
  display: inline-block !important;
  vertical-align: middle !important;
}

.swiper_dots{
  position: absolute;
  bottom:5px;
  width:100%;
  display: flex;
  padding:16rpx 0 0;
  justify-content: center;
}
.swiper_dots-item{
  width:30rpx;
  height:5px;
  background: #fff;
  border-radius: 5px;
  margin:0 8rpx;
  transition: all 0.5s;
}
.swiper_dots_item_active{
  width:40rpx;
  background: #005882;
}

.slide-image {
  width: 100%; 
  height: 100%;
  position: relative;
  border-radius: 0;
}