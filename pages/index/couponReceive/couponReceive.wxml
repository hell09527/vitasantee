<view>
  <view class="motify {{prompt==''?'hide':''}}">
    <icon class="i show_type warning" type='warn' size='25' color='#fff'></icon>
    <view class="motify-inner">{{prompt}}</view>
  </view>
  <scroll-view scroll-y class='all-image'>
    <image src='{{detail.img}}' mode='widthFix' />
  </scroll-view>
  <view class='receive-btn' catchtap="toReceive">领取优惠券</view>
</view>
