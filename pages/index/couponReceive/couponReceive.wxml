<!-- 弹框 -->
<view class='mask' wx:if='{{isEnvelope==1}}' catchtap='toCancle'>
  <view class='mask-box'>
    <view class='mask-box-title'>
      <view class='coupon-title'>{{detail.title}}</view>
      <view class='coupon-list-box'>
        <image class="envelope" src="https://static.vitasantee.com/envelope.png" mode="widthFix">
          <view class="envelope-content">
            <view class="envelope-top">
              <text style="font-size: 46rpx">200</text>
              <text style="font-size: 24rpx">元</text>
            </view>
            <view class="envelope-bottom" style="font-size: 28rpx">购物金</view>  
