/* pages/index/couponReceive/couponReceive.wxss */
.receiveList{
  padding:40rpx 0; 
}
.receiveItem{
  margin-bottom: 30rpx;
  width:100%;
  background: #fff;
  padding:20rpx;
}
.receiveItem-left{
  height: 200rpx;
  width:186rpx;
  background: #000;
  padding:30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  background: #000;
  color:#cc9933;
}
.receiveItem-left>view{
  font-size: 14px;
  color:#CC9933;
  text-align: center;
  width:100%;
  justify-content: center;
  /* margin-top: 20rpx; */
}
.receiveItem-left>view>text{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.receiveItem-left>hr{
  width:16px;
  height:1px;
  border-top:1px solid #CC9933;
}
.receiveItem-right{
  height:200rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: flex-start;
  padding:0 40rpx;
  font-size: 14px;
}

.receive-btn{
  background: #000;
  margin:0 40rpx 40rpx; 
  color:#cc9933;
  text-align: center;
  line-height: 90rpx;
  font-size: 14px;
  height: 90rpx;
}
.receive-btn-success{
  background: #bcb6a7;
  margin:0 40rpx 40rpx; 
  color:#333;
  text-align: center;
  line-height: 90rpx;
  font-size: 14px;
  height: 90rpx;
}
.back-btn{
  margin:0 40rpx 60rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 14px;
  height: 90rpx;
  color:#000;
  padding:0 30rpx;
  border:1px solid #bbb;
}