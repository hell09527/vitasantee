/* pages/index/brand/brand.wxss */
/*品牌专区  */


page{
  /* background: #f9d904; */
}
scroll-view{
  height: 100%;
}

.first-search{
  padding: 10px 20rpx;
  background: #e40046;
}
.search-box{
  position: relative;
  z-index: 10;
  width:100%;
  border-radius: 45rpx;
  height:33px;
  border:1px solid #fff;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding:0 20rpx;
  background:#fff;
}
.search-button{
  width:32rpx;
  height:32rpx;
  margin-right: 20rpx;
}
.search-input{
  border:0;
  background: transparent;
  color:#000;
  font-size: 14px;
  width:100%;
}

.classify-box{
  align-items:flex-start;
}
.classify-left{
  width:190rpx;
  /* float: left; */
  box-sizing: border-box;
  /* height: 100%; */
}
.classify-title{
  margin:20rpx 0;
  width:100%;
  color:#333;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
  border-left: 3px solid transparent;
  border-right: 3px solid transparent;
}
.classify-title-active{
  font-size: 16px;
  font-weight: 600;
  color:#e40046;
  background: #fff;
  border-left: 5px solid #e40046;
  border-right: 5px solid transparent;
}
.classify-right{
  /* float: right; */
  width:560rpx;
  background: #fff;
  /* height:100%; */
  padding:20rpx 10rpx;
  box-sizing: border-box;
  height:100vh;
}
.classify-right>image{
  width:100%;
  margin-bottom: 20rpx;
  display: block;
}
.goods-list{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}
.goods-list-item:nth-child(3n){
  margin-right: 0;
}
.goods-list-item{
  box-shadow: 0px 0px 20px rgba(0,0,0,0.1);
  background: #fff;
  margin:0 10rpx 20rpx 10rpx;
  padding:10rpx;
  width:160rpx;
  box-sizing: border-box;
}
.goods-list-item>image{
  width:140rpx;
  height: 140rpx;
}
.brand-recommended{
  position: relative;
  width:100%;
  height: 50rpx;
}
.brand-recommended>text{
  position: absolute;
  left:30rpx;
  background: #fff;
  padding:0 10rpx;
  z-index: 10;
  color:#9b9b9b;
  font-size: 12px;
  top:50%;
  transform: translateY(-50%);
}
.brand-recommended>hr{
  position: absolute;
  height:1px;
  width:100%;
  z-index: 2;
  top:50%;
  transform: translateY(-50%);
  background: #9b9b9b;
}