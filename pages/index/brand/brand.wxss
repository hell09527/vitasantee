/*品牌专区  */


page{
  /* background: #f9d904; */
}
scroll-view{
  height: 100%;
}

.first-search{
  padding: 10px 20rpx;
  background: #e40046;
}
.search-box{
  position: relative;
  z-index: 10;
  width:100%;
  border-radius: 45rpx;
  height:33px;
  border:1px solid #fff;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding:0 20rpx;
  background:#fff;
}
.search-button{
  width:32rpx;
  height:32rpx;
  margin-right: 20rpx;
}
.search-input{
  border:0;
  background: transparent;
  color:#000;
  font-size: 14px;
  width:100%;
}

.classify-left{
  width:190rpx;
  height: 100%;
}
.classify-title{
  margin:20rpx 0;
  width:100%;
  color:#333;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
  border-left: 3px solid transparent;
  border-right: 3px solid transparent;
}
.classify-title-active{
  font-size: 16px;
  font-weight: 600;
  color:#e40046;
  background: #fff;
  border-left: 3px solid #e40046;
  border-right: 3px solid transparent;
}
.classify-right{
  width:560rpx;
  background: #fff;
  height:100%;
  padding:20rpx;
}
.classify-right>image{
  width:100%;
  margin-bottom: 20rpx;
  display: block;
}
.goods-list{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.goods-list-item:nth-child(3n){
  margin-right: 0;
}
.goods-list-item{
  box-shadow: 0px 0px 20px rgba(0,0,0,0.1);
  background: #fff;
  margin-right: 20rpx;
  padding:10rpx;
  width:160rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.goods-list-item>image{
  width:140rpx;
  height: 140rpx;
}