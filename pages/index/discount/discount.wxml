
<import src="/templates/HomeOrShare-icon-template/HomeOrShare-icon-template.wxml" />

<scroll-view class='discount_time_box' scroll-x>
  <block wx:for='{{discountList}}' wx:key='' wx:for-item='item' wx:for-index='index'>
    <view class="discount_time_detail {{item.active==1?'discount_time_detail_active':''}}" data-id="{{item.seckill_id}}" catchtap='toCheck' data-index='{{index}}'>
      <view class='discount_time'>{{item.endTimeShow}}</view>
      <!-- <view class='discount_text'>{{item.status==1?'抢购中':'即将开始'}}</view> -->
      <view class='discount_text'>{{activityStatus[item.status]}}</view>
      <view class='discount_icon' wx:if='{{item.active==1}}'></view>
    </view>
  </block>
</scroll-view>

<view class='discount_goods_list'>
  <block wx:for='{{discountGoods}}' wx:key='' wx:for-item='item' wx:for-index='index'>
    <view class="discount_goods" data-id="{{item.goods_id}}" bindtap="toDetail">
      <image src="{{item.picture.pic_cover}}" mode="scaleToFill"/>
      <view class='discount_goods_detail'>
        <view style='font-size:14px;color:#333;' class="text-ellipsis">{{item.goods_name}}</view>
        <view style='font-size:12px;color:#999;margin:5rpx 0 10rpx;' class="text-ellipsis">{{item.introduction}}</view>
        <view class='discount_inventory'>
          <text style='font-size:12px;color:#999;margin-bottom:5rpx;'>{{item.sku_name}}</text>
          <view style='color:#999;' wx:if='{{isActive&&item.stock > 0}}'>仅剩<text style='color:#ea566a'>{{item.stock}}</text>件</view>
          <view style='color:#999;' wx:if="{{isActive&&item.stock == 0}}">来晚了哦</view>
        </view>
        <view class='discount_inventory'>
          <view class='discount_goods_price'>
            <text style='font-size:18px;color:#005882'>￥{{item.seckill_price}}</text>
            <view style='color:#999;margin-left:10rpx;text-decoration:line-through;'>￥{{item.price}}</view>
          </view>
          <view class='discount_immediately' wx:if='{{isActive&&item.stock>0}}'>马上抢</view>
          <view class='discount_immediately' style='background:#333;' wx:if="{{isActive&&item.stock == 0}}">已抢完</view>
          <view class='discount_immediately' style='background:#333;' wx:if="{{!isActive}}">等待秒杀</view>
        </view>
      </view>
    </view>
  </block>
</view>

