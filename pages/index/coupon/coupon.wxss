/* pages/index/coupon/coupon.wxss */
.couponList{
  padding:40rpx 0;
}
.couponItem{
  margin-bottom: 30rpx;
  background: #fff;
  padding:20rpx;
}
.couponItem:last-child{
  margin-bottom: 110rpx;
}
.couponItem-image{
  width: 20px;
  height: 20px;
  margin-right: 20rpx;
}
.couponItem-middle{
  height: 200rpx;
  width:186rpx;
  background: #000;
  padding:30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.couponItem-middle>view{
  font-size: 14px;
  color:#CC9933;
  text-align: center;
  width:100%;
  justify-content: center;
  /* margin-top: 20rpx; */
}
.couponItem-middle>view>text{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.couponItem-middle>hr{
  width:16px;
  height:1px;
  border-top:1px solid #CC9933;
}
.couponItem-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:0 30rpx;
  height: 180rpx;
}
.coupon-btn{
  width:100%;
  background: #000;
  color:#CC9933;
  height: 50px;
  font-size: 14px;
  position: fixed;
  bottom: 0;
  left:0;
  text-align: center;
  line-height: 50px;
  border-radius: 0;
}