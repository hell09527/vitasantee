
.brand_goods_detail{
  float: left;
  margin:0 0 20rpx 20rpx;
  padding:10rpx;
  width:220rpx;
  box-shadow: 0px 0px 20px rgba(0,0,0,0.1);
  /* height: 400rpx; */
  background: #fff;
}
.brand_goods_detail:nth-child(3n){
  margin:0 20rpx 20rpx 20rpx;
}
.brand_goods_detail>image{
  width:200rpx;
  height: 200rpx;
}
.brand_goods_price{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:10rpx 10rpx 10rpx 0;
}
.brand_goods_price>text{
  font-size:12px;
  color:#005882;
}
.brand_goods_price>image{
  width:34rpx;
}
.activity_text{
  height:34px;
  margin:10rpx 0;
  font-size: 12px;
  color:#333;
  display: -webkit-box; 
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical; 
  overflow: hidden;
  white-space:pre-line;
}
.activity_info{
  font-size: 12px;
  color:#999;
  display: -webkit-box; 
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical; 
  overflow: hidden;
  white-space:pre-line;
}

.i.goods_tab {
  font-style: normal;
  font-size: 10px !important;
  background: #e40046;
  color: #fff !important;
  padding: 1px 5px;
  margin-right: 2px;
  border-radius: 8px;
  font-weight: normal !important;
}