.goods_all{
  width:50%;
  float: left;
  box-sizing: border-box;
}
.goods_all:nth-child(2n)>.all-box{
  margin:0 20rpx 20rpx 10rpx;
}
.all-box{
  margin:0 10rpx 20rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
}
.all-box>image{
  width:100%;
  display: block;
}
.shop-detail{
  padding:10px;
}
.title{
  font-size: 12px;
  line-height: 18px;
  height:36px;
  display: -webkit-box; 
-webkit-line-clamp: 2; 
-webkit-box-orient: vertical; 
overflow: hidden;
}

.shop-detail-price{
  display: flex;
  justify-content: flex-start;
  padding:10rpx 0 0;
  align-items: center;
}
.shop-detail-price>text{
  color:#000;
  margin-right: 10px;
  font-weight:700;
}
.i.goods_tab {
  font-style: normal;
  font-size: 12px !important;
  background: #333;
  color: #fff !important;
  padding: 1px 3px;
  margin-right: 2px;
  border-radius: 2px;
  font-weight: normal !important;
}